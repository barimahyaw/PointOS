
<EditForm Model="@ProductStockRequest" OnValidSubmit="@SaveChanges">


    <DataAnnotationsValidator></DataAnnotationsValidator>


    @if (ProductStockRequest.Products != null)
    {

        <MudSelect Label="-- Select Product --" Strict="true" Variant="Variant.Outlined" Format="F2" @bind-Value="@ProductStockRequest.ProductId" For="@(()=>ProductStockRequest.ProductId)">
            @foreach (var product in ProductStockRequest.Products)
                {
                    if (!string.IsNullOrWhiteSpace(product.Value))
                    {
                    <MudSelectItem Value="Convert.ToInt32(product.Value)">@product.Text</MudSelectItem>
                    }
                }
        </MudSelect>

    }


    <MudTextField @bind-Value="@ProductStockRequest.Quantity" Label="Cost Price" Variant="Variant.Outlined" For="@(()=>ProductStockRequest.Quantity)" />



