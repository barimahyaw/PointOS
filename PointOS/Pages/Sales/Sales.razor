@page "/Sales"

<MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">
    <MudTabPanel Text="Point of Sale">
        <MudGrid>
            <MudItem xs="12" sm="4" md="3">
                <MudCard Elevation="25">
                    <MudCardHeader>
                        <CardHeaderContent>
                            @*<MudText>Pricing Setup</MudText>*@
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <ProductSearch ProductsChanged="Refresh" Products="@Products" />
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="8" md="9">
                <RetailCart Products="@Products" ProductsChanged="ClearProducts"/>

            </MudItem>
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="Daily Sales">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText>Sales List</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <PointOS.Pages.Sales.List />
            </MudCardContent>

        </MudCard>
    </MudTabPanel>
    <MudTabPanel Text="Customers">
        <MudItem xs="12" sm="12" md="12">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>List of Customers</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <PointOS.Pages.Customer.List />
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudTabPanel>
</MudTabs>

