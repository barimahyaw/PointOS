@page "/ProductCategories"
@*<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Product Category List</MudText>*@

<SfGrid TValue="@ProductCategoryResponse" AllowPaging="true" AllowSorting="true" Toolbar="@(new List<string>() {"Search"})">
    <Syncfusion.Blazor.Data.SfDataManager Adaptor="Adaptors.CustomAdaptor" AdaptorInstance="@typeof(ProductCategoryAdapter)"></Syncfusion.Blazor.Data.SfDataManager>
    <GridPageSettings PageCount="3" PageSize="5" PageSizes="@PagerDropDown"></GridPageSettings>
    <GridSortSettings AllowUnsort="false"></GridSortSettings>
    <GridEditSettings AllowAdding="true" AllowDeleting="true" AllowEditing="true"></GridEditSettings>
    <GridColumns>
        <GridColumn Type="ColumnType.CheckBox" AllowFiltering="false" AllowSorting="false" Width="60"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.Id)" Visible="false" HeaderText="Id"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.GuidValue)" Visible="false" HeaderText="Value"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.ProductName)" HeaderText="Name"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.Status)" HeaderText="Status"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.CreatedBy)" HeaderText="Created By"></GridColumn>
        <GridColumn Field="@nameof(ProductCategoryResponse.CreatedOn)" HeaderText="Created On"></GridColumn>
        @*<GridColumn Field="@nameof(ProductCategoryResponse.ModifiedBy)" HeaderText="Modified By"></GridColumn>
            <GridColumn Field="@nameof(ProductCategoryResponse.ModifiedOn)" HeaderText="Modified On"></GridColumn>*@
        <GridColumn HeaderText="Manage Records" Width="150">
            <GridCommandColumns>
                <GridCommandColumn Type="CommandButtonType.Edit" ButtonOption="@(new CommandButtonOptions() {IconCss = "e-icons e-edit", CssClass = "e-flat"})"></GridCommandColumn>
                <GridCommandColumn Type="CommandButtonType.Delete" ButtonOption="@(new CommandButtonOptions() {IconCss = "e-icons e-delete", CssClass = "e-flat"})"></GridCommandColumn>
                <GridCommandColumn Type="CommandButtonType.Save" ButtonOption="@(new CommandButtonOptions() {IconCss = "e-icons e-save", CssClass = "e-flat"})"></GridCommandColumn>
                <GridCommandColumn Type="CommandButtonType.Cancel" ButtonOption="@(new CommandButtonOptions() {IconCss = "e-icons e-cancel-icon", CssClass = "e-flat"})"></GridCommandColumn>
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Class="ml-auto" @onclick="@OpenDialog">Add</MudButton>
            </GridCommandColumns>
        </GridColumn>
    </GridColumns>
</SfGrid>
