
<EditForm Model="@BranchRequest" OnValidSubmit="@SaveChanges">
    <MudDialog>
        <DialogContent>

            <DataAnnotationsValidator></DataAnnotationsValidator>

            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudTextField @bind-Value="@BranchRequest.Name" Label="Name" Variant="Variant.Outlined" For="@(()=>BranchRequest.Name)" />
                </MudItem>
            </MudGrid>
            <MudCardActions>

            </MudCardActions>


        </DialogContent>
        <DialogActions>
            <MudButton OnClick="@Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" ButtonType="ButtonType.Submit">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }


    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}